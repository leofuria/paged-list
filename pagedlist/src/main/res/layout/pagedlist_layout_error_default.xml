<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/errorBox"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingStart="@dimen/pagedlist_dp_36"
    android:paddingTop="@dimen/pagedlist_dp_10"
    android:paddingEnd="@dimen/pagedlist_dp_36">

    <TextView
        android:id="@+id/errorTitleText"
        style="@style/pagedlist_text_bold_24_gray_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/pagedlist_dp_8"
        android:gravity="top|center"
        android:paddingTop="@dimen/pagedlist_dp_4"
        android:text="@string/pagedlist_generic_error" />

    <ImageView
        android:id="@+id/errorImage"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_gravity="center"
        android:contentDescription="@string/pagedlist_desc_error_image"
        app:srcCompat="@drawable/pagedlist_ic_baseline_remove_red_eye_24" />

    <TextView
        android:id="@+id/errorText"
        style="@style/pagedlist_text_regular_16_gray_darker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:gravity="top|center"
        android:padding="@dimen/pagedlist_dp_10"
        android:text="@string/pagedlist_verify_connection_label" />

    <Button
        android:id="@+id/refreshButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pagedlist_dp_10"
        android:background="@drawable/pagedlist_button_secondary"
        android:text="@string/pagedlist_try_again_label"
        android:textColor="@android:color/white" />

</LinearLayout>
