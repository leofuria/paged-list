<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/errorBox"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingStart="@dimen/paged_list_dp_36"
    android:paddingEnd="@dimen/paged_list_dp_36">

    <ImageView
        android:id="@+id/errorImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:contentDescription="@string/paged_list_desc_error_image"
        android:theme="@style/paged_list_error_image"
        app:srcCompat="@drawable/paged_list_ic_baseline_remove_red_eye_24" />

    <TextView
        android:id="@+id/errorTitleText"
        style="@style/paged_list_title_error_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/paged_list_dp_16"
        android:gravity="top|center"
        android:text="@string/paged_list_generic_error" />

    <TextView
        android:id="@+id/errorText"
        style="@style/paged_list_desc_error_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/paged_list_dp_8"
        android:gravity="top|center"
        android:text="@string/paged_list_verify_connection_label" />

    <Button
        android:id="@+id/refreshButton"
        style="@style/paged_list_button_error_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/paged_list_dp_10"
        android:text="@string/paged_list_try_again_label"
        android:textColor="@android:color/white" />

</LinearLayout>
